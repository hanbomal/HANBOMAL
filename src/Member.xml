<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

	<select id="login" resultType="String" parameterType="hashmap">
		select passwd from member where memberid=#{memberid}
	</select>
	
<select id="getNextNumber" parameterType="int">
	
	select memberser.nextval from dual
	</select>	
<!--  	
<insert id="insertMember" parameterType="member">
      insert into member(memberid, passwd, nickname, joindate, lastdate) values(#{memberid},#{passwd},#{nickname}, sysdate, sysdate )
   </insert>	
	-->

<select id="getMember" parameterType="hashmap" resultType="member">
      select * from member WHERE memberid = #{memberid} 
   </select>	
   
 <select id="updateMember" parameterType="member">
      update member set 
		nickname=#{nickname},=#{nickname} where memberid=#{memberid} and passwd=#{passwd}
   </select>  
   
   
  <update id="deleteMember" parameterType="map">
      delete from member where memberid=#{memberid} 
				 and passwd =#{passwd}
	
  
  </update>
  
 
  <select id="checkMember" resultType="String" parameterType="hashmap">
		select passwd from member where memberid=#{memberid}
	</select>
	
	
	 

</mapper>